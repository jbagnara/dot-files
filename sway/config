set $mod Mod1

#Start tasks
exec waybar
exec $HOME/.config/sway/scripts/inactive-windows-transparency.py

#Border configs
default_border none
gaps inner 3

#set displays
set $d1 DP-2
set	$d2 HDMI-A-1 

output DP-2 pos 1920 0 res 1920x1080@144Hz
output HDMI-A-1 pos 0 0 res 1920x1080@75Hz

workspace 1 output $d1
workspace 2 output $d1
workspace 3 output $d1
workspace 4 output $d1
workspace 5 output $d1
workspace 6 output $d2
workspace 7 output $d2
workspace 8 output $d2
workspace 9 output $d2
workspace 10 output $d2

#Applications
assign [class="discord"] $ws9
for_window [app_id="pavucontrl"] floating enable

#Background
output * bg $HOME/.config/sway/bg1.png stretch

#Transparent windows
exec compton

#Disable mouse focus
focus_follows_mouse no

#Includes
include $HOME/.config/sway/config.d/*
